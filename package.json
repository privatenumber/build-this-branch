{
	"name": "build-this-branch",
	"version": "0.0.0-semantic-release",
	"description": "Script to automate creating built branches",
	"keywords": [
		"npm",
		"git",
		"github",
		"built",
		"build",
		"branch",
		"branches"
	],
	"license": "MIT",
	"repository": "privatenumber/build-this-branch",
	"funding": "https://github.com/privatenumber/build-this-branch?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin",
		"dist"
	],
	"bin": "dist/index.js",
	"scripts": {
		"build": "pkgroll --minify",
		"lint": "eslint .",
		"postversion": "npm run build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": "eslint"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.22.0",
		"@types/node": "^17.0.31",
		"@types/npm-packlist": "^3.0.0",
		"cleye": "^1.2.0",
		"eslint": "^8.15.0",
		"execa": "^6.1.0",
		"husky": "^4.0.0",
		"lint-staged": "^12.4.1",
		"npm-packlist": "^5.0.3",
		"pkg-up": "^4.0.0",
		"pkgroll": "^1.2.2",
		"tasuku": "^2.0.0",
		"tsup": "^5.12.7",
		"typescript": "^4.6.4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"rules": {
			"@typescript-eslint/no-shadow": [
				"error",
				{
					"allow": [
						"task",
						"setTitle"
					]
				}
			]
		}
	}
}
